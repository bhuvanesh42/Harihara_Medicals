<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#3377ff"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:id="@+id/navi_img"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/img_list"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/colorwhite"
        android:id="@+id/navi_user"
        android:layout_toRightOf="@id/navi_img"
        android:textSize="@dimen/_30sdp"
         />

    <TextView
        android:id="@+id/navi_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangalore"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/colorwhite"
        android:layout_below="@id/navi_user"
        android:layout_toRightOf="@id/navi_img"
        android:fontFamily="@font/montserrat_medium"/>

</RelativeLayout>
